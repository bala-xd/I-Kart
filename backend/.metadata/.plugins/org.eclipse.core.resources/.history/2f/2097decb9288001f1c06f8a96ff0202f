# Application Name
spring.application.name=api-gateway

# Eureka Client Configuration
eureka.client.service-url.default-zone=http://localhost:8761/eureka

# Server Port
server.port=7777

# Logging Levels
logging.level.root=INFO
logging.level.org.springframework.cloud.gateway.route.RouteDefinitionLocator=INFO
logging.level.org.springframework.cloud.gateway.route=TRACE

# Common CORS Headers
cors.allowed.origin=http://localhost:3000
cors.allowed.methods=GET, POST, PUT, DELETE, OPTIONS
cors.allowed.headers=*

# API Gateway Routes
spring.cloud.gateway.routes[0].id=product-service
spring.cloud.gateway.routes[0].uri=lb://productservice
spring.cloud.gateway.routes[0].predicates[0]=Path=/product-api/**
spring.cloud.gateway.routes[0].filters[0]=AddRequestHeader=Access-Control-Allow-Origin,http://localhost:3000
spring.cloud.gateway.routes[0].filters[1]=AddResponseHeader=Access-Control-Allow-Origin,http://localhost:3000
spring.cloud.gateway.routes[0].filters[2]=AddResponseHeader=Access-Control-Allow-Methods,${cors.allowed.methods}
spring.cloud.gateway.routes[0].filters[3]=AddResponseHeader=Access-Control-Allow-Headers,${cors.allowed.headers}

# Repeat similarly for other services...
spring.cloud.gateway.routes[1].id=cart-service
spring.cloud.gateway.routes[1].uri=lb://cartservice
spring.cloud.gateway.routes[1].predicates[0]=Path=/cart-api/**
spring.cloud.gateway.routes[1].filters[0]=AddRequestHeader=Access-Control-Allow-Origin,http://localhost:3000
spring.cloud.gateway.routes[1].filters[1]=AddResponseHeader=Access-Control-Allow-Origin,http://localhost:3000
spring.cloud.gateway.routes[1].filters[2]=AddResponseHeader=Access-Control-Allow-Methods,${cors.allowed.methods}
spring.cloud.gateway.routes[1].filters[3]=AddResponseHeader=Access-Control-Allow-Headers,${cors.allowed.headers}

spring.cloud.gateway.routes[2].id=customer-service
spring.cloud.gateway.routes[2].uri=lb://customerservice
spring.cloud.gateway.routes[2].predicates[0]=Path=/customer-api/**
spring.cloud.gateway.routes[2].filters[0]=AddRequestHeader=Access-Control-Allow-Origin,http://localhost:3000
spring.cloud.gateway.routes[2].filters[1]=AddResponseHeader=Access-Control-Allow-Origin,http://localhost:3000
spring.cloud.gateway.routes[2].filters[2]=AddResponseHeader=Access-Control-Allow-Methods,${cors.allowed.methods}
spring.cloud.gateway.routes[2].filters[3]=AddResponseHeader=Access-Control-Allow-Headers,${cors.allowed.headers}

spring.cloud.gateway.routes[3].id=login-service
spring.cloud.gateway.routes[3].uri=lb://loginservice
spring.cloud.gateway.routes[3].predicates[0]=Path=/login-api/**
spring.cloud.gateway.routes[3].filters[0]=AddRequestHeader=Access-Control-Allow-Origin,http://localhost:3000
spring.cloud.gateway.routes[3].filters[1]=AddResponseHeader=Access-Control-Allow-Origin,http://localhost:3000
spring.cloud.gateway.routes[3].filters[2]=AddResponseHeader=Access-Control-Allow-Methods,${cors.allowed.methods}
spring.cloud.gateway.routes[3].filters[3]=AddResponseHeader=Access-Control-Allow-Headers,${cors.allowed.headers}