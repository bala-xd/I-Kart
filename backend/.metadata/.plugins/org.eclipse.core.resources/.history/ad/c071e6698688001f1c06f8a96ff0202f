package com.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.dto.CustomerDTO;
import com.proxy.ICustomerProxy;

@Service
public class UserService {
	@Autowired
	private ICustomerProxy proxy;
	
	public List<CustomerDTO> getAll(){
	
		return proxy.getAllCustomers();
	}

	public CustomerDTO createUser(CustomerDTO customer) {
		
		CustomerDTO cDTO = proxy.addCustomer(customer);
		return cDTO;
	}
	
	/*public CustomerDTO validateUser(UserDto u) {
