package com.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;
import org.springframework.stereotype.Service;

import com.dto.CustomerDTO;
import com.proxy.ICustomerProxy;

@Service
public class UserService {
	@Autowired
	private ICustomerProxy repo;
	
	public List<CustomerDTO> getAll(){
	
		return repo.getAllCustomers();
	}

	public CustomerDTO createUser(CustomerDTO customer) {
		
		CustomerDTO cDTO = repo.addCustomer(customer);
		return cDTO;
	}
	
	public User validateUser(UserDto u) {
		User user = repo.validateLogin(u.getUsername(), u.getPassword());
		return user;
	}
	
	public User updateLoginStatus(User u) {
		if (u.getLoginStatus()==0) u.setLoginStatus(1);
		else u.setLoginStatus(0);
		User user = repo.save(u);
        return user;
    }

}
